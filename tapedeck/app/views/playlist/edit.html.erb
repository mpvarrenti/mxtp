<div class="mxtp-main">
        <%#= params if @debug = true %>
        <h1 class="playlist-title"><%= @title.upcase %></h1>

        <% if @playlist.title == nil %>
                <div class="mxtp-section">
                        <div class="playlist_title-form">
                                <%= form_tag("", method: "get") do %>
                                      <div class="playlist-set-title">
                                        <%= text_field(:playlist, :title) %>
                                      </div>
                                        <div class="mxtp-form-btn"><%= submit_tag("Set Title") %></div>
                                <% end %>
                        </div>
                </div>
        <% end %>

        <h3 class="mxtp-labels">Profile Style</h3>
        <div section="mxtp-section">
                <div class="playlist_style-form">
                        <%= form_tag("", method: "get") do %> 
                                <%= label_tag(:bgcolor, "Background Colour")%>
                                <%= color_field(:style, :bgcolor) %> 
                                <%= label_tag(:color, "Font Colour")%>
                                <%= color_field(:style, :color)%> 
                                <div class="mxtp-form-btn"><%= submit_tag("Update") %></div>
                        <% end %>
                </div>
        </div>


        <h3 class="mxtp-labels">Keep adding songs until you're done...</h3>

        <div class="mxtp-section">
                <div class="song_new-form">
                        <%= form_tag("", method: "get") do %>
                                <%= label_tag(:song_title, "Song:") %>
                                <div class="mxtp-form-input"><%= text_field(:new_song, :song_title) %></div>
                                <%= label_tag(:artist, "Artist:") %>
                                <div class="mxtp-form-input"><%= text_field(:new_song, :artist_name) %></div>
                                <div class="mxtp-form-btn"><%= submit_tag("Add") %></div>
                        <% end %>
                </div>
        </div>

        <div class="mxtp-section">
                <div class="song-list">
                        <% for song in @songs %>
                                <p><%= "#{song.song_title} by #{song.artist_name}" %></p>
                        <% end %>
                </div>
        </div>

        <div class="mxtp-section">
                <div class="mxtp-buttons">
                        <%= button_to "Done!", playlist_path(@playlist), method: :get%>
                        <%= button_to "Delete Playlist", playlist_path(@playlist), method: :delete %>
                </div>
        </div>
</div>
