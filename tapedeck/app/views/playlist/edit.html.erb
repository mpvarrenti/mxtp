<div class="mxtp-main">
        <%= params if @debug = true %>
        <h1 class="playlist-title"><%= @title %></h1>

        <% if @playlist.title == nil %>
                <div class="mxtp-section">
                        <div class="playlist_title-form">
                                <%= form_tag("", method: "get") do %>
					<%= text_field(:playlist, :title, options = {placeholder: "set playlist title here..."}) %>
                                        <%= submit_tag("Set Title") %>
                                <% end %>
                        </div>
                </div>
        <% end %>

        <div section="mxtp-section">
                <div class="playlist_style-form">
                        <%= form_tag("", method: "get") do %> 
                                <%= label_tag(:bgcolor, "Background Colour")%>
                                <%= color_field(:style, :bgcolor) %> 
                                <%= label_tag(:color, "Font Colour")%>
                                <%= color_field(:style, :color)%> 
                                <%= submit_tag("Update") %>
                        <% end %>
                </div>
        </div>


        <p>Keep adding songs until you're done...</p>

        <div class="mxtp-section">
                <div class="song_new-form">
                        <%= form_tag("", method: "get") do %>
                                <%= label_tag(:song_title, "Song Title:") %>
                                <%= text_field(:new_song, :song_title) %>
                                <%= submit_tag("Add") %>
                        <% end %>
                </div>
        </div>

        <div class="mxtp-section">
                <div class="song-list">
                        <% for song in @songs %>
				<hr>
				<p>
					<%= "#{song.song_title} by #{song.artist_name}" %>
					<%= form_for :fix_artist, url:edit_playlist_song_path(song), method: :get do |fix_artist_form| %>
						<%= hidden_field_tag(:song_id, song.id) %>
						<%= fix_artist_form.submit "Fix Artist" %>	
					<% end %>
				</p>
                        <% end %>
                </div>
        </div>

        <div class="mxtp-section">
                <div class="mxtp-buttons">
                        <%= button_to "Done!", playlist_path(@playlist), method: :get%>
                        <%= button_to "Delete Playlist", playlist_path(@playlist), method: :delete %>
                </div>
        </div>
</div>
